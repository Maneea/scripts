#!/bin/bash

# Remove all stopped containers
if [ $(docker ps -aq | wc -l) -eq 0 ]; then
  echo "ğŸŸ© No containers active running."
else
  echo "============================="
  echo "âš™ï¸  Stopping the following containers:"
  docker stop $(docker ps -aq)
  echo "âœ… All containers stopped."
  echo "âš™ï¸  Removing the following containers:"
  docker rm $(docker ps -aq)
  echo "âœ… All containers removed."
  echo "============================="
  echo ""
fi

# Remove all volumes not used by at least one container
if [ $(docker volume ls -qf dangling=true | wc -l) -eq 0 ]; then
	echo "ğŸŸ© No volumes active running."
else
  echo "============================="
  echo "âš™ï¸  Removing the following volumes:"
  docker volume rm $(docker volume ls -qf dangling=true)
  echo "âœ… All volumes removed."
  echo "============================="
  echo ""
fi

# Remove all images not used by at least one container
if [ $(docker images -qf dangling=true | wc -l) -eq 0 ]; then
	echo "ğŸŸ© No images active running."
else
  echo "============================="
  echo "âš™ï¸  Removing the following images:"
  docker rmi $(docker images -qf dangling=true)
  echo "âœ… All images removed."
  echo "============================="
  echo ""
fi

# Remove all networks not used by at least one container
if [ $(docker network ls -qf dangling=true | wc -l) -eq 0 ]; then
	echo "ğŸŸ© No networks active running."
else
  echo "============================="
  echo "âš™ï¸  Removing the following networks:"
  docker network rm $(docker network ls -qf dangling=true)
  echo "âœ… All networks removed."
  echo "============================="
  echo ""
fi
